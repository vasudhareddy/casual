package com.wellsfargo.opq.config;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.InjectMocks;
import org.mockito.MockitoAnnotations;
import org.springframework.oxm.jaxb.Jaxb2Marshaller;

import static org.junit.jupiter.api.Assertions.assertNotNull;
import static org.mockito.Mockito.spy;
import static org.mockito.Mockito.verify;

class JaxbConfigTest {

    @InjectMocks
    private JaxbConfig jaxbConfig;

    @BeforeEach
    void setUp() {
        MockitoAnnotations.openMocks(this);
    }

    @Test
    void testMarshaller() {
        // Call the method under test
        Jaxb2Marshaller marshaller = jaxbConfig.marshaller();

        // Verify that the bean is created
        assertNotNull(marshaller, "Marshaller bean should not be null");

        // Verify that packagesToScan are set correctly
        String[] packagesToScan = marshaller.getPackagesToScan();
        assertNotNull(packagesToScan, "PackagesToScan should not be null");
        assertNotNull(packagesToScan[0], "First package should not be null");
        assertNotNull(packagesToScan[1], "Second package should not be null");

        // Spy to verify internal method calls
        Jaxb2Marshaller spiedMarshaller = spy(marshaller);
        spiedMarshaller.setPackagesToScan(packagesToScan);
        verify(spiedMarshaller).setPackagesToScan(packagesToScan);
    }
}
